<center>
  <h1>SCORE</h1>
  <table>
    <col width='20%'>
    <col width='10%'>
    <col width='20%'>
    <tr id='title'>
      <td align='center'><h1>Jugador 1</h1></td>
      <td align='center'>vs</td>
      <td align='center'><h1>Jugador 2</h1></td>
    </tr>
  </table>
  <h1><%=@jugador1%> - <%=@jugador2%></h1>
  <% if @jugador1=='40' and @jugador2=='40'%>
    <h3>DEUCE</h3>
  <%end%>
  <% if @jugador1=='GAME' or @jugador2=='GAME'%>
      <h3>JUEGO TERMINADO</h3>
      <a href="/" title='empezar'><button id='empezar'>Volver a empezar</button></a>
  <%else%>
  <table>
    <col width='20%'>
    <col width='10%'>
    <col width='20%'>
    <tr>
      <td align='center'>
        <form id="jugador1" action="/anota1" method="post">
        	<div class="scores1">
        		<div class="boton1">
        			<input id="anota1" type="submit" value="Anotar jugador 1" <%= @disabled %>>
        		</div>
        	</div>
        </form>
      </td>
      <td align='center'></td>
      <td align='center'>
      <form id="jugador2" action="/anota2" method="post">
      	<div class="scores2">
      		<div class="boton2">
      			<input id="anota2" type="submit" value="Anotar jugador 2" <%= @disabled %>>
      		</div>
      	</div>
      </form>
    </td>
    </tr>
  </table>
  <%end%>
</center>
